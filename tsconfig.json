{
  "compilerOptions": {
    "target": "es5",
    "outDir": "dist",
    "rootDir": "./src",
    "removeComments": true,
    "sourceMap": true,
    // Local config
    "noImplicitAny": false,
    "strictNullChecks": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}